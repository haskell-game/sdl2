    build-depends: base >= 4.7 && < 5, linear >= 1.10.1.2 && < 1.16, sdl2
  else
    buildable: False

  hs-source-dirs: examples/lazyfoo
  main-is: Lesson01.hs
  default-language: Haskell2010
